<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:id="@+id/hscroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="500dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="0dp">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="500dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/poster" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="0dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:padding="0dp"
            android:background="@drawable/round_welcome016">
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="460dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="255dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/postertext" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="475dp"
            android:layout_marginLeft="185dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ava" />
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="180dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ramka" />
        <ImageView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="520dp"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/lines" />
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="160dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:padding="0dp"
            android:background="@drawable/round_welcome001">
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="0dp"
            android:text="Name: "
            android:layout_marginTop="515dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/namik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="0dp"
            android:text="Loading..."
            android:layout_marginTop="515dp"
            android:layout_marginLeft="55dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="0dp"
            android:text="Surname: "
            android:layout_marginTop="525dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/surnamik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="0dp"
            android:text="Loading..."
            android:layout_marginTop="525dp"
            android:layout_marginLeft="68dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="0dp"
            android:text="Date: "
            android:layout_marginTop="547dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="0dp"
            android:text="Age: "
            android:layout_marginTop="557dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="10dp" />

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/liner1"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/namers_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/black_blue_dark"
                android:textColorHint="@color/hint"
                android:textSize="14dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Main Information"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/time_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Time"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/black_blue_dark"
                android:textColorHint="@color/hint"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/place_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Place"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/black_blue_dark"
                android:textColorHint="@color/hint"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/description_email"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Description"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/black_blue_dark"
                android:textColorHint="@color/hint"
                android:textSize="14dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Выберите теги"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton

                    android:id="@+id/voiting1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_centerInParent="true"
                    android:background="@color/tranceparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/vote1" />

                <TextView
                    android:id="@+id/voitingtext1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Спорт"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton

                    android:id="@+id/voiting2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_centerInParent="true"
                    android:background="@color/tranceparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/vote1" />

                <TextView
                    android:id="@+id/voitingtext2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Икусство"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton

                    android:id="@+id/voiting3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_centerInParent="true"
                    android:background="@color/tranceparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/vote1" />

                <TextView
                    android:id="@+id/voitingtext3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Кино"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageButton

                    android:id="@+id/voiting4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_centerInParent="true"
                    android:background="@color/tranceparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/vote1" />

                <TextView
                    android:id="@+id/voitingtext4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Прогулка"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />




            </RelativeLayout>

            <Button
                android:id="@+id/add_post_button"
                android:layout_width="270dp"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ripple_effect"
                android:drawablePadding="8dp"
                android:ems="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Add post"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>
    </HorizontalScrollView>
    </ScrollView>



</FrameLayout>